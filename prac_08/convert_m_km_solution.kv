BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: miles_input
            text: ''
            font_size: 48
            on_text: app.calculate_km()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.adjust_input(1)

            Button:
                text: 'Down'
                on_press: app.adjust_input(-1)

    Label:
        id: km_output
        text: '0.0'
        font_size: 48
        color: (0.2, 0.8, 1, 1)
